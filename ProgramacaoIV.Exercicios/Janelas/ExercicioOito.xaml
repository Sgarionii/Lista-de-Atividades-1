<Window x:Class="ProgramacaoIV.Exercicios.Janelas.ExercicioOito"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramacaoIV.Exercicios.Janelas"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Exercicio 8" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" MaxHeight="50"/>
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Margin="10,10,10,40" Grid.RowSpan="2">
            <TextBlock Text="Selecione uma data:"/>
            <DatePicker x:Name="dpData" Margin="0,5"/>
            <Button Content="Verificar Dia da Semana" 
                    Width="200" 
                    Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}"
                    Click="btnVerificarDia_Click"/>
        </StackPanel>

    </Grid>
</Window>
